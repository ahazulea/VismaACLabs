@model Company

<div class="page-header text-center">
    <h1>Edit</h1>
</div>

<div>
    <div>
        <form method="post" asp-antiforgery="true" asp-action="Edit" class="form-edit">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" asp-for="Name" class="form-control"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactEmail" class="control-label"></label>
                <input type="email" asp-for="ContactEmail" class="form-control"/>
                <span asp-validation-for="ContactEmail" ></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactPhoneNumber" class="control-label"></label>
                <input type="tel" asp-for="ContactPhoneNumber" class="form-control"/>
                <span asp-validation-for="ContactPhoneNumber"></span>
            </div>
            <div class="form-group">
                <label asp-for="MainAddress" class="control-label"></label>
                <input type="text" asp-for="MainAddress" class="form-control"/>
                <span asp-validation-for="MainAddress"></span>
            </div>
            <div class="form-group">
                <label class="control-label"></label>
                <div class="col-md-6">
                    <input type="submit" value="Save" class="btn btn-primary btn-block" />
                </div>
                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-default btn-block">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>