@model UploadViewModel

@{
    ViewBag.Title = "Upload";
}

<div class="page-header text-center">
    <h1>Upload</h1>
</div>
<form method="post" enctype="multipart/form-data" asp-action="Upload" class="form-edit">
    <div class="form-group">
        <label asp-for="UploadedFile" class="control-label"></label>
        <input type="file" asp-for="UploadedFile" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FileName" class="control-label"></label>
        <input type="text" asp-for="FileName" class="form-control" />
        <span asp-validation-for="FileName"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContentType" class="control-label"></label>
        <select asp-for="ContentType" asp-items="@Html.GetEnumSelectList(typeof(FileContentType))" class="form-control"></select>
    </div>
    
    <div class="form-group">
        <label class="control-label"></label>
        <div class="col-md-6">
            <input type="submit" value="Save" class="btn btn-primary btn-block" />
        </div>
        <div class="col-md-6">
            <a asp-action="@nameof(HomeController.Index)" class="btn btn-default  btn-block">Cancel</a>
        </div>
    </div>
</form>